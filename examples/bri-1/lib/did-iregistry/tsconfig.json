{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "isolatedModules": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.test.ts",
      "src/setupTests.ts"
    ]
  }